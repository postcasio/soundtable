{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // "baseUrl": "build",
    "paths": {
      "@/*": [
        "./*"
      ],
      "$/*": [
        "./src/*"
      ]
    },
    // ensure `tsc` will only type-check
    "noEmit": false,
    "allowJs": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "strict": true,
    "outDir": "build"
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "Cellscript.js",
    "build/**",
    "dist/**"
  ]
}